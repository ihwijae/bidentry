{
  "name": "automation-shell",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "renderer:dev": "vite --config renderer/vite.config.js",
    "renderer:build": "vite build --config renderer/vite.config.js",
    "renderer:preview": "vite preview --config renderer/vite.config.js",
    "dev": "concurrently -k \"npm run renderer:dev\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron . -- --demo\"",
    "job": "electron . -- --job ../automation-engine/src/jobs/schema.sample.json",
    "pack": "electron-builder --dir",
    "predist": "npm run renderer:build",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.bidautomation",
    "productName": "BidAutomation",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**",
      "renderer/dist/**"
    ],
    "extraResources": [
      {
        "from": "../automation-engine",
        "to": "engine",
        "filter": [
          "src/**",
          "package.json",
          "package-lock.json",
          "node_modules/**"
        ]
      },
      {
        "from": "../icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "BidAutomation-${version}-win.${ext}",
      "icon": "../icon.ico"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "vite": "^5.2.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "bid-automation": "file:..",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
