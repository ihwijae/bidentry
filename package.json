{
  "name": "bid-automation",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "automation-engine",
    "electron-app"
  ],
  "scripts": {
    "clean:playwright": "node scripts/clean-playwright.js",
    "prebuild": "node scripts/ensure-automation-engine.js && npm run clean:playwright",
    "dev": "npm --prefix electron-app run dev",
    "app:dev": "npm --prefix electron-app run dev",
    "engine:demo": "node automation-engine/src/cli.js --demo",
    "bootstrap": "npm --prefix electron-app install",
    "build": "npm --prefix electron-app run dist"
  }
}
